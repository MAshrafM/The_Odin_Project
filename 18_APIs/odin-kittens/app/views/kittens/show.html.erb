<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="panel panel-default">
  <div class="panel-heading">
    <p>
      <strong>Name:</strong>
      <%= @kitten.name %>
    </p>
  </div>
  <div class="panel-body">
    <p>
      <strong>Age:</strong>
      <%= @kitten.age %>
    </p>

    <p>
      <strong>Cuteness:</strong>
      <%= @kitten.cuteness %>
    </p>

    <p>
      <strong>Softness:</strong>
      <%= @kitten.softness %>
    </p>
  </div>
  <div class="panel-footer">
    <div class="btn-group">
      <%= link_to 'Edit', edit_kitten_path(@kitten), class: "btn btn-default" %>
      <%= link_to 'Back', kittens_path, class: "btn btn-default" %>
    </div>
  </div>
</div>



</div>
</div>

