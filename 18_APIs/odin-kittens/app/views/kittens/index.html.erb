
<h1 class="text-center">Odin Kittens</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Cuteness</th>
      <th>Softness</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody class="table-striped">
    <% @kittens.each do |kitten| %>
      <tr>
        <td><%= kitten.name %></td>
        <td><%= kitten.age %></td>
        <td><%= kitten.cuteness %></td>
        <td><%= kitten.softness %></td>
        <td>
        <div class="btn-group">
        <%= link_to 'Show', kitten, class: "btn btn-default" %>
        <%= link_to 'Edit', edit_kitten_path(kitten), class: "btn btn-default" %>
        <%= link_to 'Destroy', kitten, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


