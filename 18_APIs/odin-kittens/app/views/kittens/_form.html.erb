<div class="row">
<div class="col-sm-8 col-sm-offset-2">
  <%= form_for(@kitten, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @kitten.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kitten.errors.count, "error") %> prohibited this kitten from being saved:</h2>

      <ul>
      <% @kitten.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :age, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :age, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cuteness, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cuteness, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :softness, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :softness, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

</div>
</div>
