<% provide(:title, 'Sign up') %>

<div class="container">
	<h1 class="text-center">Sign Up</h1>
	<hr />
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for(@user) do |f| %>
			  <%= render 'fields', f: f %>
				<div class="form-group">
						<%= f.submit "Create Account", class: "btn btn-block btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>

</div>
